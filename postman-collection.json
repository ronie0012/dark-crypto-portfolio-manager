            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{testUserId}}\",\n  \"username\": \"{{testUsername}}\",\n  \"message\": \"Hello from Postman! Testing at {{$timestamp}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
